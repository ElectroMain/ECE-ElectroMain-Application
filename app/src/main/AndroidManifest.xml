<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mainelectro">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo_pfe"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MainElectro">
        <activity
            android:name=".controller.JoystickModeHuitCommandesActivity"
            android:exported="false" />
        <activity
            android:name=".controller.HelpActivity"
            android:exported="false" />
        <activity
            android:name=".controller.JoystickModeQuatreCommandesActivity"
            android:exported="false" />
        <activity
            android:name=".controller.JoystickModeDeuxCommandesActivity"
            android:exported="false" />
        <activity
            android:name=".controller.Bluetooth1Activity"
            android:exported="false" />
        <activity
            android:name=".controller.JoystickModeCinqCommandesActivity"
            android:exported="false" />
        <activity
            android:name=".controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>